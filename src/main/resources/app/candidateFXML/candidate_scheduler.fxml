<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="620.0" prefWidth="1263.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.OrariKandidatiController">
   <children>
      <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f4f4f4;">
      
         <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Menaxhimi i Orarit">
            <VBox.margin>
               <Insets left="500.0" />
            </VBox.margin>
         </Label>
      
         <HBox spacing="10">
            <!-- Seksioni i kërkimit -->
            <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #e6e6e6; -fx-border-radius: 5;">
               <Label style="-fx-font-weight: bold;" text="Kërko Orar" />
      
               <HBox alignment="CENTER_LEFT" spacing="5">
                  <Label text="Data:" />
                  <DatePicker fx:id="dataPicker" />
                  <Button fx:id="kerkoButton" onAction="#kerkoOraretPerDate" text="Kërko" />
               </HBox>
      
               <HBox alignment="CENTER_LEFT" spacing="5" />
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
      
            <!-- Seksioni i progresit -->
            <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #e6e6e6; -fx-border-radius: 5;">
               <Label style="-fx-font-weight: bold;" text="Progresi i Mësimeve" />
               <PieChart fx:id="progresiChart" prefHeight="200" prefWidth="300" />
            </VBox>
            <VBox.margin>
               <Insets left="300.0" />
            </VBox.margin>
         </HBox>
      
         <!-- Tabela e orareve -->
         <TableView fx:id="orariTable" prefHeight="273.0" prefWidth="1240.0">
            <columns>
               <TableColumn fx:id="dataColumn" prefWidth="250.0" text="Data" />
               <TableColumn fx:id="oraFillimitColumn" prefWidth="250.0" text="Ora Fillimit" />
               <TableColumn fx:id="oraPerfundimitColumn" prefWidth="250.0" text="Ora Përfundimit" />
               <TableColumn fx:id="llojiColumn" prefWidth="250.0" text="Lloji" />
               <TableColumn fx:id="statusiColumn" prefWidth="250.0" text="Statusi" />
            </columns>
         </TableView>
      </VBox>
   </children>
</AnchorPane>
